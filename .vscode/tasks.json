{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "PyPI: update gai-sdk",
            "type": "shell",
            "command": "/bin/bash",
            "args": [
                "-c",
                "poetry remove gai-sdk || poetry cache clear PyPI --all -n && poetry add gai-sdk"
            ],
            "problemMatcher": []
        },
        {
            "label": "Docker: build",
            "type": "shell",
            "command": "/bin/bash",
            "args": [
                "-c",
                "cd ${workspaceFolder}/.vscode && python docker_build.py"
            ],
            "problemMatcher": []
        },
        {
            "label": "Docker: push",
            "type": "shell",
            "command": "/bin/bash",
            "args": [
                "-c",
                "cd ${workspaceFolder}/.vscode && python docker_push.py"
            ],
            "problemMatcher": []
        },
        {
            "label": "Docker: exec",
            "type": "shell",
            "command": "/bin/bash",
            "args": [
                "-c",
                "cd ${workspaceFolder}/.vscode && python docker_exec.py"
            ],
            "problemMatcher": []
        },
        {
            "label": "Docker: stop",
            "type": "shell",
            "command": "/bin/bash",
            "args": [
                "-c",
                "python ${workspaceFolder}/.vscode/devops_cli.py docker-stop gai-ttt"
            ],
            "problemMatcher": []
        },
        {
            "label": "Docker: idle",
            "type": "shell",
            "command": "/bin/bash",
            "args": [
                "-c",
                "python ${workspaceFolder}/.vscode/devops_cli.py docker-idle gai-ttt"
            ],
            "problemMatcher": []
        },
    ]
}