{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "PyPI: update gai-sdk",
            "type": "shell",
            "command": "/bin/bash",
            "args": [
                "-c",
                "pip install --upgrade gai-sdk"
            ],
            "problemMatcher": []
        },
        {
            "label": "Docker: build devcontainer",
            "type": "shell",
            "command": "/bin/bash",
            "args": [
                "-c",
                "gai docker build ${workspaceFolder}/pyproject.toml --dockerfile-path=${workspaceFolder}/.devcontainer/Dockerfile.devcontainer --image-name=gai-ttt-llamacpp_devcontainer"
            ],
            "problemMatcher": []
        },
        {
            "label": "Docker: push devcontainer",
            "type": "shell",
            "command": "/bin/bash",
            "args": [
                "-c",
                "gai docker push ${workspaceFolder}/pyproject.toml --dockerfile-path=${workspaceFolder}/.devcontainer/Dockerfile.devcontainer --image-name=gai-ttt-llamacpp_devcontainer"
            ],
            "problemMatcher": []
        },
        {
            "label": "Docker: build",
            "type": "shell",
            "command": "/bin/bash",
            "args": [
                "-c",
                "gai docker build ${workspaceFolder}/pyproject.toml"
            ],
            "problemMatcher": []
        },
        {
            "label": "Docker: push",
            "type": "shell",
            "command": "/bin/bash",
            "args": [
                "-c",
                "gai docker push ${workspaceFolder}/pyproject.toml"
            ],
            "problemMatcher": []
        },
        {
            "label": "Docker: stop",
            "type": "shell",
            "command": "/bin/bash",
            "args": [
                "-c",
                "docker compose -f ${workspaceFolder}/docker-compose.yml down"
                //"gai docker stop gai-ttt-svr-llamacpp"
            ],
            "problemMatcher": []
        },
        {
            "label": "Docker: run",
            "type": "shell",
            "command": "/bin/bash",
            "args": [
                "-c",
                //"python ${workspaceFolder}/.vscode/docker_run.py"
                "docker compose -f ${workspaceFolder}/docker-compose.yml up"
            ],
            "problemMatcher": []
        },
        {
            "label": "Docker: idle",
            "type": "shell",
            "command": "/bin/bash",
            "args": [
                "-c",
                "source ${workspaceFolder}/.venv/bin/activate && python ${workspaceFolder}/.vscode/docker_idle.py"
            ],
            "problemMatcher": []
        },
    ]
}