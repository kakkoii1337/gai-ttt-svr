{
	"name": "gai-ttt-svr",
	"build": {
		"dockerfile": "Dockerfile",
		"args": {
			"USERNAME": "roylai"
		}
	},
	"runArgs": [
		"--gpus=all",
		// Add a custom network that shares the same address space as WSL instance
		"--network=gai-sandbox"
	],
	"mounts": [
		"source=${localEnv:HOME}/.gai,target=/root/.gai,type=bind,consistency=cached",
		"source=${localEnv:HOME}/.cache,target=/root/.cache,type=bind,consistency=cached",
		"source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind"
	],
	"customizations": {
		"vscode": {
			"settings": {
				"terminal.integrated.shell.linux": "/bin/bash"
			},
			"extensions": [
				"ms-python.python",
				"ms-toolsai.jupyter"
			]
		}
	},
	"forwardPorts": [
		12031
	],
	"appPort": [
		"12031:12031"
	],
	//"postCreateCommand": "poetry install",
	"remoteUser": "kakkoii1337"
}